<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_other"
    style="@style/PopWindowContainerLayoutStyle">

    <RelativeLayout
        style="@style/PopWindowContainerItemLayoutSwitchStyle"
        android:gravity="center_vertical">

        <TextView
            style="@style/PopWindowContainerTileTextStyle"
            android:layout_alignParentStart="true"
            android:text="@string/setting_fm_switch" />

        <ImageView
            android:id="@+id/iv_switch_fm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/selector_switch"
            android:contentDescription="TODO" />
    </RelativeLayout>

    <LinearLayout style="@style/PopWindowContainerItemLayoutStyle">

        <TextView
            style="@style/PopWindowContainerTileTextStyle"
            android:layout_weight="0"
            android:src="@drawable/selector_setting_mobile_data"
            android:text="@string/adjust_volume" />

        <SeekBar
            android:id="@+id/sb_volume"
            style="@style/PopupWindowSeekBarStyle"
            android:max="15" />

        <TextView
            android:id="@+id/tv_volume_value"
            style="@style/PopWindowContainerTileTextStyle"
            android:layout_weight="0"
            android:src="@drawable/selector_setting_mobile_data" />

    </LinearLayout>

    <RelativeLayout
        style="@style/PopWindowContainerItemLayoutSwitchStyle"
        android:gravity="center_vertical" />
</LinearLayout>